# Database
DATABASE_URL=postgresql://instagram_cf:YOUR_DB_PASSWORD@db:5432/instagram_cf
POSTGRES_USER=instagram_cf
POSTGRES_PASSWORD=YOUR_DB_PASSWORD
POSTGRES_DB=instagram_cf

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Security (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ В ПРОДАКШЕНЕ!)
# Генерируйте безопасные ключи:
# SECRET_KEY: openssl rand -hex 32
# ENCRYPTION_KEY: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SECRET_KEY=YOUR_SECRET_KEY_MIN_32_CHARS
ENCRYPTION_KEY=YOUR_FERNET_KEY_BASE64_ENCODED_32_BYTES

# Translation API
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Instagram Settings
INSTAGRAM_SESSION_LIFETIME_DAYS=90

# Limits
MAX_POSTS_PER_DAY_PER_ACCOUNT=10
MAX_CONCURRENT_TASKS=50
MIN_DELAY_BETWEEN_POSTS_SEC=120
MAX_DELAY_BETWEEN_POSTS_SEC=300

# Monitoring (опционально)
SENTRY_DSN=

# App Settings
DEBUG=False
LOG_LEVEL=INFO

# CORS (для продакшена)
# Если фронтенд и бэкенд на одном домене через nginx - оставьте *
# Если на разных доменах - укажите через запятую: https://app.example.com,https://www.example.com
CORS_ORIGINS=*


